                        {% if app.user.type %}
                            {% if app.user.type.id == 2 %}
                                {% set ini_price = prod.pricepro %}
                            {% endif %}
                        {% endif %}       
                    {% endif %}
                    <span class="h2">{{ini_price~' â‚¬'}}</span>
                </div>
                <div class="col-12 mt-3 mb-3 h3">

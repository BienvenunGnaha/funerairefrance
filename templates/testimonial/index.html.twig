{% extends 'base.html.twig' %}

{% block title %}Avis des clients | FuneraireFrance{% endblock %}

{% block body %}
    <style>
        .img-ts {
            max-height: 200px;
            max-width: auto;
        }
    </style>
    <div class="container-fluid">
        <div class="h6 mt-3"> <a href="/">Acceuil</a><span> / Temoignages</span> </div>
            <div class="row p-2"> <h2>Nos clients t√©moignent</h2></div>
            <div class="row">
                {% for testimonial in testimonials %}
                {% set photo = link_image(testimonial.photo) %}
                <div class="col-12 frfu-home-testimonial">
                    <div class="row">
                        <div class="col-7">
                            <div class="w-100">{{testimonial.name}}</div>
                            <div class="p-1 bg-light mb-1 w-100"><i class="fas fa-map-marker-alt"></i><span class="ml-2">{{testimonial.location}}</span></div>
                            <div class="p-1 bg-light mb-1 w-100"><i class="fas fa-moon"></i><span class="ml-2">{{testimonial.cimetiere}}</span></div>
                            <div class="p-2 h-auto w-100"><p>{{testimonial.message}}</p></div>
                        </div>
                        <div class="col-5">
                            <div class="h-75 overflow-hidden">
                                <img class="img-ts" src="{{'/'~photo}}" >
                            </div>
                            <div class="h-25 d-flex justify-content-end">
                                <div class="text-muted">{{testimonial.createdAt|date('d/m/Y')}}</div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

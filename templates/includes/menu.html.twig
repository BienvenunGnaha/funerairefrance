<style>
    {% if lengthCatMenu > 0 %}
        {% set i = 0 %}
        {% for item in catMenu %}
          .frfu-icon-menu-{{item.id}}:before{
            content: url("{{'/'~link_image(item.icon)}}");
            margin-right: 2px;
            vertical-align: middle;
            line-height: 1;
          }

          .frfu-text-menu-{{item.id}}{
            border-bottom: {{'3px solid '~item.color}};
          }

          .frfu-text-menu-{{item.id}}:hover{
            color: {{item.color}};
          }
        {% endfor %}
    {% endif %}

    .frfu-callback{
        font-stretch: condensed;
        font-weight: 600;
        background: #f7f7f7;
        border: 1px solid #d8dee2;
        width: 130px;
        text-transform: uppercase;
        color: #3b586d;
        border-radius: 5px;
        font-size: 1rem;
        line-height: 1;
        box-sizing: border-box;
        text-align: left;
    }
    .frfu-callback:before{
        position: absolute;
        margin-left: 110px;
        margin-top: -10px;
        content: url('https://funerairefrance.com/images/pico/picto-callback.png');
    }
</style>
<div id="desktop-header-menu-wrap" class="desktop-header z-index-x-2 bg-white"> 
    <div id="desktop-header-first-row" class="row">
        <header class="blog-header py-3 border-bottom col-12">
            <div class="row widget-top p-1">
                <div class="col-1">
                    <img src="/images/conseiller.png" width="40px">
                </div>
                <div class="col-11">
                    <span>
                        Nous avons adapté nos services pour assurer la totalité de notre activité, vous accompagner dans vos projets et continuer à vous livrer . En savoir plus :
                    </span>
                </div>
            </div>
            <div class="row widget-top-info mt-2">
                <div class="col-3 frfu-callback-p">
                    <div class="border border-dark p-1 frfu-callback">
                        <div id="frfu-ask-call-button" class="p-1" data-toggle="modal" data-target="#frfu-ask-call">RAPPEL AUTOMATIQUE</div>
                    </div>
                </div>
                <div class="col-9 d-flex justify-content-center">
                    <div><span>Appelez-nous :</span> 05 62 87 51 63</div>
                </div>
            </div>
            
        </header>
    </div>
   
    
    {% if lengthCatMenu > 0 %}
        
        <div id="desktop-header-second-row" class="row frfu-menu-top bg-white">
            <div class="col-12">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-2 text-center">
                        <a href="/"><img class="img-fluid" src="/images/pico/logo.jpeg"></a>
                    </div>
                    <div class="col-6 d-flex justify-content-end align-items-center">
                        <a class="p-2 text-dark" href="/">Accueil</a>
                        <a class="p-2 text-dark" href="{{url('blog')}}">Blog</a>
                        <a class="p-2 text-dark" href="{{url('contact')}}">Contact</a>
                        <a class="p-2 text-dark" href="{{url('page', {'slug': getPage(all_pages, 'about_us').slug})}}">Qui sommes nous?</a>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        {% if app.user %}
                            <a href="{{url('wishlist')}}" class="text-secondary btn btn-outline-secondary mr-2"><i class="fas fa-heart text-danger"></i> Wishlist</a>
                        {% endif %}
                        <a id="frfu-myaccount-button" class="btn btn-outline-secondary ml-2" {{app.user ? 'href="/user/dashboard"' : 'href="/login"'}}><i class="far fa-user"></i> Mon compte</a>
                        <a href="{{url('cart')}}" class="cart text-secondary btn btn-outline-secondary ml-2"><i class="fas fa-shopping-cart"></i> Mon panier</a>
                        
                    </div>
                </div>
            </div>
            <div class="col-12">
                <nav class="nav d-flex justify-content-around">
                {% set i = 0 %}
                {% for item in catMenu %}
                    <a class="{{'p-2 h-100 menu-link frfu-icon-menu-'~item.id~' frfu-text-menu-'~item.id}}" style="{{'margin-bottom: 0px; border-bottom: 3px solid '~item.color~';'}}" href="{{url('category_product', {'id' : item.id})}}" data-target="{{'#sub-cat'~item.id}}"> {{item.name|upper}} </a>
                    
                {% endfor %}
                    <a class="p-2 menu-link" style="{{'border-bottom: 3px solid #3b586d;'}}" href="{{url('page', {'slug' : getPage(all_pages, 'bien_choisir').slug})}}" data-target="#sub-cat-bien-choisir"> {{getPage(all_pages, 'bien_choisir').name|upper}} </a>
                
                </nav>
            </div>
        </div>
    {% endif %}
    
</div>

<div class="mobile-header z-index-x-2 bg-white">
    <div class="row">
        <header class="blog-header py-3 border-bottom col-12">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-2 text-center">
                    <button id="sidebarCollapse" type="button" class="btn btn-sm btn-outline-secondary" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-bars"></i>
                    </button>
                    <img class="img-fluid" src="/images/pico/logo.jpeg">
                </div>
                <div class="col-9 d-flex justify-content-end align-items-center">
                   {% if app.user %}
                        <a href="{{url('wishlist')}}" class="text-secondary btn mr-2"><i class="fas fa-heart text-danger"></i> Wishlist</a>
                    {% endif %}
                   
                    <a id="frfu-myaccount-button" class="btn btn-sm btn-outline-secondary" {{app.user ? 'href="/user/dashboard"' : 'href="/login"'}}>Mon compte</a>
                    
                    <a href="{{url('cart')}}" class="cart text-secondary ml-2"><i class="fas fa-shopping-cart"></i></a>
                </div>
            </div>
        </header>
    </div>
</div>




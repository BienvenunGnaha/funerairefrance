                                    {% if devis.method.id == 1 and devis.secondFeePayed == false and devis.firstFeePayed == false %}
                                        <td>100% du montant</td>
                                    {% elseif devis.method.id == 1 and devis.secondFeePayed == false and devis.firstFeePayed == true %}
                                        <td>70% du montant</td>
                                    {% elseif devis.method.id == 1 and devis.secondFeePayed == true and devis.firstFeePayed == true %}
                                        {% set see_devis = 'Voir' %}
                                        <td>0€</td>

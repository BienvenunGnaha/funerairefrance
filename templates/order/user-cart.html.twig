{% extends 'user.html.twig' %}

{% block title %}Hello WishlistController!{% endblock %}

{% block user_block %}

    <div class="container-fluid">
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                        <th scope="col">Id du panier</th>
                        <th scope="col">Status</th>
                        <th scope="col">Reste à payer / Mois restants</th>
                        <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            {% for cart in carts %}
                                <tr>
                                    <td>{{cart.id}}</td>
                                    <td>{{cart.status.name}}</td>
                                    <td></td>
                                    <td>
                                        <a href="{{url('cart-user-view', {'uniqId': cart.uniqId})}}" class="btn btn-outline-secondary ml-auto mr-auto">Consulter le panier</a>
                                        {% if cart.colis != null %}
                                            <span class="btn btn-outline-secondary ml-auto mr-auto tracking-chronopost" data-colis="{{cart.colis}}">Tracker</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% if cart.paid != 1 %} 
                                    <tr>
                                       <td colspan="1">
                                            <a href="{{url('checkout-cart')}}" class="btn btn-secondary ml-auto mr-auto">Finaliser la commande</a>
                                       </td>
                                       <td colspan="1">
                                            <a href="{{url('cart')}}" class="btn btn-secondary ml-auto mr-auto">Modifier votre commande</a>
                                       </td>
                                       <td></td>
                                       <td colspan="1">
                                            <a href="{{url('carts-invoice-pdf', {'id': cart.id})}}" class="btn btn-secondary ml-auto mr-auto">Obtenir la facture</a>
                                       </td>
                                    </tr>
                                {% endif %}
                                
                            {% endfor %}

                           {# {% for devis in devises %}
                                {% if devis.method %}
                                {% set see_devis = 'Voir / Payer' %}
                                <tr>
                                    <td>{{devis.id}}</td>
